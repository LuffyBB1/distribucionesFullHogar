model Credito {
  id_credito    Int     @id @default(autoincrement())
  id_cliente    Int?
  monto_total   Int
  cuotas        Int
  fecha_inicio  DateTime @default(now())
  frecuencia_pago String
  estado        String @default("PENDIENTE")

  cliente       Cliente? @relation(fields: [id_cliente], references: [id_cliente])
  pagos         Pago[]
}